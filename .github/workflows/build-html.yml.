
name: Build Client Page

on:
  workflow_dispatch:
    inputs:
      client_json:
        description: 'Client data in JSON format'
        required: true

permissions:
  contents: write  # allow this workflow to push commits

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Write client.json from input (safe here-doc)
        shell: bash
        run: |
          cat > client.json <<'JSON_EOF'
          ${{ github.event.inputs.client_json }}
          JSON_EOF
          echo "client.json written:"
          wc -c client.json
          echo "Preview:"
          head -n 5 client.json

      - name: Generate HTML
        run: |
          mkdir -p clients
          python scripts/generate_html.py client.json

      - name: Commit HTML (if changed)
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add clients/
          if git diff --cached --quiet; then
            echo "No changes to commit."
            exit 0
          fi
          git commit -m "Add/Update client page"
         
