
name: Build Client Page

on:
  workflow_dispatch:
    inputs:
      client_json:
        description: 'Client data in JSON format'
        required: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Generate HTML
        run: |
          echo "${{ github.event.inputs.client_json }}" > client.json
          python scripts/generate_html.py client.json

      - name: Commit HTML
        run: |
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"
          git add clients/
          git commit -m "Add client page"
          git push
``
